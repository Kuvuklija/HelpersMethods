        Here are the fruits:
        <!--foreach(string str in ViewBag.Fruits) {
            <b>str</b>-->
        <!--ListArrayItems(ViewBag.Fruits)-->
        @Html.ListArrayItems((string[])ViewBag.Fruits)
    </div>
    <div>
        Here are the cities:
        <!--foreach (string str in ViewBag.Cities) {
            <b>str</b>-->
        <!--ListArrayItems(ViewBag.Cities)-->
        @Html.ListArrayItems((string[])ViewBag.Cities)
    </div>
    <div>
        Here is the message:
        <p>@Model</p>
    </div>
</body>
</html>
